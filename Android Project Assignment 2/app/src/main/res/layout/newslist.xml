<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/outerlayout"
    android:layout_height="match_parent"
    android:weightSum="3">
    <ImageView
        android:background="#191919"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/newsbar1"
        android:layout_height="20dp" />
    <ImageView
        android:background="#191919"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/newsbar"
        android:layout_height="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/newslist1"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:weightSum="3">
            <TextView
                android:id="@+id/wine_name"
                android:layout_width="wrap_content"
                android:layout_weight="1.2"
                android:layout_height="0dp"
                android:text="Lorem ipsum dolor sit amet"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/wine_type_year"
                android:padding="7dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Tuesday, April 28th, 2015  "
                android:textColor="#b8b8b8"
                 />

            <TextView
                android:layout_weight="1.2"
                android:padding="5dp"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#606060"
                android:textSize="13sp"
                android:text="Lorem ipsum dolor sit amet, ctetur adipiscing elit, sed do eiusmod tempor" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:weightSum="3">
            <TextView
                android:id="@+id/wine_wname"
                android:layout_width="wrap_content"
                android:layout_weight="1.2"
                android:layout_height="0dp"
                android:text="Lorem ipsum dolor sit amet"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/wine_typew_year"
                android:padding="7dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Tuesday, April 28th, 2015  "
                android:textColor="#b8b8b8"
                />

            <TextView
                android:layout_weight="1.2"
                android:padding="5dp"
                android:id="@+id/descriptionw"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#606060"
                android:textSize="13sp"
                android:text="Lorem ipsum dolor sit amet, ctetur adipiscing elit, sed do eiusmod tempor" />
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/newslist2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/newslist3"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:weightSum="3">
            <TextView
                android:id="@+id/wine_namre"
                android:layout_width="wrap_content"
                android:layout_weight="1.2"
                android:layout_height="0dp"
                android:text="Lorem ipsum dolor sit amet"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/wine_type_yeear"
                android:padding="7dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Tuesday, April 28th, 2015  "
                android:textColor="#b8b8b8"
                />

            <TextView
                android:layout_weight="1.2"
                android:padding="5dp"
                android:id="@+id/desdcription"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#606060"
                android:textSize="13sp"
                android:text="Lorem ipsum dolor sit amet, ctetur adipiscing elit, sed do eiusmod tempor" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>